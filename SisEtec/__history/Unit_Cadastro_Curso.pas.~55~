procedure TFRM_Cadastro_Curso.Image1Click(Sender: TObject);
begin
  if Estado_Menu = true then
  begin
    Estado_Menu := false;
    Timer1.Enabled := true;
  end
  else
  begin
    Estado_Menu := true;
    Timer1.Enabled := true;
  end;
end;

