procedure TFrm_Marcacao_N_Alunos_N_Turmas_N_Cursos.Image2MouseUp
  (Sender: TObject; Button: TMouseButton; Shift: TShiftState; X, Y: Single);
begin
  ShadowEffect2.Opacity := 0.6;
