procedure TFrm_Destinatario_Arquivos.Cadastra_Arquivos;
begin
  Centro_Controle.Cadastrar_Dados_Arquivo(Unit_Arquivos.Nome_Final_Arquivo,
    Unit_Arquivos.Extensao_Arquivo, Unit_Arquivos.Tipo_Arquivo, ComboEdit1.Text,
    Unit_Arquivos.Codigo_Proprietario_Arquivo,
    Unit_Arquivos.Tipo_Proprietario_Arquivo, Centro_Controle.Nome_Usuario);
end;

procedure TFrm_Destinatario_Arquivos.ComboBox1Change(Sender: TObject);
begin
  ComboEdit1.SetFocus;
end;

procedure TFrm_Destinatario_Arquivos.Mostra_Mensagem;
begin
  ShowMessage('Upload Pessoal do Arquivo: ' + Unit_Arquivos.Nome_Final_Arquivo +
    ' realizado com Sucesso.');
  Frm_Arquivos.Show;
  Frm_Destinatario_Arquivos.Hide;
end;

procedure TFrm_Destinatario_Arquivos.FormCloseQuery(Sender: TObject;
  var CanClose: Boolean);
begin
  if Mensagens.Fechar_Formulario('Cadastro de Eventos') = False then
  begin
    CanClose := False;
  end
  else
  begin
    Frm_Agenda.Show;
  end;
end;

procedure TFrm_Destinatario_Arquivos.FormHide(Sender: TObject);
begin
  // FRM_Principal.Verifica_Notificacoes;
  ComboBox1.ItemIndex := -1;
end;

procedure TFrm_Destinatario_Arquivos.FormShow(Sender: TObject);
var
  cont: Integer;
begin
  Estado_Menu := True;
  ComboEdit1.Text := '';
  ComboBox1.SetFocus;
  Label1.Text := 'Autor ' + Centro_Controle.Nome_Usuario;
  try
    Centro_Controle.FDQuery1.SQL.Clear;
    Centro_Controle.FDQuery1.SQL.Append
      ('select Nome_Disciplina from Disciplina order by Cod_Disciplina');
    Centro_Controle.Executar_Query_Aberta('Disciplina');
    Centro_Controle.FDQuery1.Prior;
    if (Centro_Controle.FDQuery1.FieldByName('Nome_Disciplina').Value <> Null)
    then
    begin
      ComboEdit1.Items.Append('Referente à: ' +
        Centro_Controle.FDQuery1.FieldByName('Nome_Disciplina').Value);
      for cont := 1 to (Centro_Controle.FDQuery1.RecordCount - 1) do
      begin
        Centro_Controle.FDQuery1.Next;
        ComboEdit1.Items.Append('Referente à: ' +
          Centro_Controle.FDQuery1.FieldByName('Nome_Disciplina').Value);
      end;
    end
    else
    begin
      Mensagens.Gerar_Mensagem_Simples('Nenhuma Disciplina encontrada como Item'
        + ' de Pesquisa');
    end;
  except
    Mensagens.Erro_Componentes_Iniciais_NAO_Carregados;
    FRM_Principal.Show;
    Frm_Arquivos.Hide;
  end;
end;

procedure TFrm_Destinatario_Arquivos.Image10Click(Sender: TObject);

var
  Data: TDateTime;
  Agenda_Cod_Agenda, Evento_Cod_Evento, Notificacoes: String;
begin
  Arquivos := 'sim';
  if (ComboBox1.ItemIndex = -1) or (ComboEdit1.Text = '') then
  begin
    Mensagens.Erro_Campos_Obrigatorios_Sem_Preenchimento;
    ComboBox1.SetFocus;
  end
  else if (Length(ComboEdit1.Text) > 40) then
  begin
    ShowMessage('Texto excede o tamanho Máximo do Dado.');
  end
  else
  begin
    // Data := StrToDate(DateEdit1.Text);
    // ShowMessage(Nome_Usuario_Autor);

    // Marcacção Alunos
    if (ComboBox1.ItemIndex = 0) then
    begin
      Frm_Marcacao_N_Alunos_N_Turmas_N_Cursos.Show;
      Frm_Destinatario_Arquivos.Hide;
    end;
    // Marcacção Professores
    if (ComboBox1.ItemIndex = 1) then
    begin
      Frm_Marcacao_Professores.Show;
      Frm_Destinatario_Arquivos.Hide;
    end;
    // Marcacção Coordenadores
    if (ComboBox1.ItemIndex = 2) then
    begin
      Frm_Marcacao_Coordenadores.Show;
      Frm_Destinatario_Arquivos.Hide;
    end;
    // Marcacção Administradores
    if (ComboBox1.ItemIndex = 3) then
    begin
      Frm_Marcacao_Administradores.Show;
      Frm_Destinatario_Arquivos.Hide;
    end;
    // Marcacção Administradores S
    if (ComboBox1.ItemIndex = 4) then
    begin
      Frm_Marcacao_Administradores_S.Show;
      Frm_Destinatario_Arquivos.Hide;
    end;
    // Form vários cursos
    { if (ComboBox1.ItemIndex = 5) then
      begin
      Frm_Marcacao_N_Cursos.Show;
      Frm_Destinatario_Arquivos.Hide;
      end; }
    if (ComboBox1.ItemIndex = 5) then
    begin
      Frm_Arquivos.Selects;
      if (Unit_Controle.Tipo_Usuario = 1) then
      begin
        try
          Centro_Controle.FDQuery1.SQL.Clear;
          Centro_Controle.FDQuery1.SQL.Append
            ('select Agenda_Cod_Agenda from Aluno where Nome_Aluno like "' +
            Centro_Controle.Nome_Usuario + '"');
          Centro_Controle.Executar_Query_Aberta('Aluno');
          Centro_Controle.FDQuery1.Last;
          Agenda_Cod_Agenda := Centro_Controle.FDQuery1.FieldByName
            ('Agenda_Cod_Agenda').Value;
          Tipo_Proprietario_Arquivo := '1';
          Cadastra_Arquivos;
          Mostra_Mensagem;
        except
          Mensagens.Erro_Envio_Arquivo;

          Frm_Agenda.Show;
          Frm_Destinatario_Arquivos.Hide;
        end;
      end;
      if (Unit_Controle.Tipo_Usuario = 2) then
      begin
        try
          Centro_Controle.FDQuery1.SQL.Clear;
          Centro_Controle.FDQuery1.SQL.Append
            ('select Agenda_Cod_Agenda from Professor where Nome_Professor like "'
            + Centro_Controle.Nome_Usuario + '"');
          Centro_Controle.Executar_Query_Aberta('Professor');
          Centro_Controle.FDQuery1.Last;
          Agenda_Cod_Agenda := Centro_Controle.FDQuery1.FieldByName
            ('Agenda_Cod_Agenda').Value;
          Tipo_Proprietario_Arquivo := '2';
          Cadastra_Arquivos;
          Mostra_Mensagem;
        except
          Mensagens.Erro_Envio_Arquivo;
          Frm_Agenda.Show;
          Frm_Destinatario_Arquivos.Hide;
        end;
      end;
      if (Unit_Controle.Tipo_Usuario = 3) then
      begin
        try
          Centro_Controle.FDQuery1.SQL.Clear;
          Centro_Controle.FDQuery1.SQL.Append
            ('select Agenda_Cod_Agenda from Coordenador where Nome_Coordenador like "'
            + Centro_Controle.Nome_Usuario + '"');
          Centro_Controle.Executar_Query_Aberta('Coordenador');
          Centro_Controle.FDQuery1.Last;
          Agenda_Cod_Agenda := Centro_Controle.FDQuery1.FieldByName
            ('Agenda_Cod_Agenda').Value;

          Tipo_Proprietario_Arquivo := '3';
          Cadastra_Arquivos;
          Mostra_Mensagem;
        except
          Mensagens.Erro_Envio_Arquivo;
          Frm_Agenda.Show;
          Frm_Destinatario_Arquivos.Hide;
        end;
      end;
      if (Unit_Controle.Tipo_Usuario = 4) then
      begin
        try
          Centro_Controle.FDQuery1.SQL.Clear;
          Centro_Controle.FDQuery1.SQL.Append
            ('select Agenda_Cod_Agenda from Administrador where Nome_Administrador like "'
            + Centro_Controle.Nome_Usuario + '"');
          Centro_Controle.Executar_Query_Aberta('Administrador');
          Centro_Controle.FDQuery1.Last;
          Agenda_Cod_Agenda := Centro_Controle.FDQuery1.FieldByName
            ('Agenda_Cod_Agenda').Value;
          Tipo_Proprietario_Arquivo := '4';
          Cadastra_Arquivos;
          Mostra_Mensagem;
        except
          Mensagens.Erro_Envio_Arquivo;
          Frm_Agenda.Show;
          Frm_Destinatario_Arquivos.Hide;
        end;
      end;
      if (Unit_Controle.Tipo_Usuario = 5) then
      begin
        try
          Centro_Controle.FDQuery1.SQL.Clear;
          Centro_Controle.FDQuery1.SQL.Append
            ('select Agenda_Cod_Agenda from Administrador_S where Nome_Administrador_S like "'
            + Centro_Controle.Nome_Usuario + '"');
          Centro_Controle.Executar_Query_Aberta('Administrador_S');
          Centro_Controle.FDQuery1.Last;
          Agenda_Cod_Agenda := Centro_Controle.FDQuery1.FieldByName
            ('Agenda_Cod_Agenda').Value;
          Tipo_Proprietario_Arquivo := '5';
          Cadastra_Arquivos;
          Mostra_Mensagem;
        except
          Mensagens.Erro_Envio_Arquivo;
          Frm_Agenda.Show;
          Frm_Destinatario_Arquivos.Hide;
        end;
      end;
      Unit_Arquivos.Arquivos := 'não';
      try
        Unit_Central_Transferencia.Mensagem := 'Administrador(es): ' +
          Frm_Cadastro_Eventos.Administradores +
          ' recebeu(ram) com sucesso o Arquivo: ' +
          Unit_Arquivos.Nome_Final_Arquivo + '.';
        Centro_Controle.FDQuery1.SQL.Clear;
        Centro_Controle.FDQuery1.SQL.Append
          ('select Cod_Arquivo from Arquivos order by Cod_Arquivo');
        Centro_Controle.Executar_Query_Aberta('Arquivos');
        Centro_Controle.FDQuery1.Last;
        FRM_central_Transferencia.Ativar_Central_Transferencia_ENVIAR_ARQUIVO
          (Frm_Arquivos, Centro_Controle.FDQuery1.FieldByName('Cod_Arquivo')
          .Value, Unit_Arquivos.Nome_Arquivo, Unit_Arquivos.Nome_Final_Arquivo);
        Unit_Arquivos.Arquivos := 'não';
      except
        Mensagens.Gerar_Mensagem_Simples
          ('Erro ao enviar o arquivo! Tente novamente mais tarde.');
      end;
    end;
  end;
end;

