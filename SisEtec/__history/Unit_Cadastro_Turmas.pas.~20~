procedure TFRM_Cadastro_Turma.Timer1Timer(Sender: TObject);
begin
  if Estado_Menu = false then
  begin
    if Panel2.Width < 150 then
    begin
      Panel2.Width := Panel2.Width + 4;
    end
    else
    begin
      Timer1.Enabled := false;
    end;
  end;
  if Estado_Menu = true then
  begin
    if Panel2.Width > 1 then
    begin
      Panel2.Width := Panel2.Width - 4;
    end
    else
    begin
      Timer1.Enabled := false;
    end;
  end;
end;

